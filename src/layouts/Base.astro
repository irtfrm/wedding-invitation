---
import "../styles/global.css";
const { title = "Tomoya & Rina Wedding Invitation" } = Astro.props;
---
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Serif+JP:wght@500&display=swap"
      rel="stylesheet"
    />
    <link href="https://fonts.googleapis.com/css2?family=Ballet:opsz@16..72&display=swap" rel="stylesheet">
  </head>
  <body class="bg-cyan text-neutral-800 font-serif">
    <main class="mx-auto max-w-[560px] bg-white">
      <slot />
    </main>
  </body>
</html>
